<Window x:Class="DynamicResources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicResources"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{DynamicResource AppBackgroundColor}">
        <Button Content="Change Theme" HorizontalAlignment="Left" Margin="177,34,0,0" VerticalAlignment="Top" Foreground="{DynamicResource AppForegroundColor}" Background="{StaticResource AppComponentBackgroundColor}" Click="Button_Click"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="177,137,0,0" VerticalAlignment="Top" Foreground="{DynamicResource AppForegroundColor}" Background="{StaticResource AppComponentBackgroundColor}"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="358,72,0,0" VerticalAlignment="Top" Foreground="{DynamicResource AppForegroundColor}" Background="{StaticResource AppComponentBackgroundColor}"/>

    </Grid>
</Window>
