<Application x:Class="DynamicResources.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DynamicResources"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="AppBackgroundColor" Color="Black"/>
        <SolidColorBrush x:Key="AppComponentBackgroundColor" Color="White"/>
        <SolidColorBrush x:Key="AppForegroundColor" Color="Red"/>
    </Application.Resources>
</Application>
